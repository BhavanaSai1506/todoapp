{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "esnext"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "@core/*": [
        "../core/*"
      ],
      "@angular/common": [
        "../node_modules/@angular/common"
      ],
      "@angular/core": [
        "../node_modules/@angular/core"
      ],
      "@angular/common/http": [
        "../node_modules/@angular/common/http"
      ],
      "@ngrx/*": [
        "../node_modules/@ngrx/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
